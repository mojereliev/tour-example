.main-nav
  display flex
  justify-content flex-end
  margin-top 48px
  margin-bottom 50px

  &__link
    display flex
    align-items center
    justify-content center
    text-align center
    height 40px
    border-radius 40px
    font-weight 500
    color currentColor
    text-decoration none
    border 2px solid transparent
    padding 4px 20px 5px
    min-width 188px
    transition .3s
    position relative

    .main-nav__item:first-child &
      color $blue
      border-color rgba($blueLight, .16)

    &:hover
      background $white
      color $purple
      border-color $white
      box-shadow 0px 1px 3px rgba($black, 0.1)
