.header
  background $blackLight
  color $gray
  font-size 13px
  font-weight 500
  line-height (16 / 13)
  padding 8px 0 7px

  &__container
    container()
    display flex
    justify-content space-between
    align-items center

  &__menu
    display flex
    align-items center

  &__menu-item
    &:not(:last-child)
      margin-right 30px

  &__menu-link
    display flex
    align-items center
    justify-content center
    text-decoration none
    color currentColor
    position relative

    &_underline
      &:after
        content ''
        position absolute
        width 100%
        height 1px
        background currentColor
        top 100%
        transition .3s
        margin-top 2px

      &:hover
        &:after
          opacity 0

    &_button
      border-radius 31px
      height 31px
      padding 5px 10px 5px
      min-width 81px
      border 2px solid rgba($grayLight, .25)

  &__menu-icon
    font-size 16px
    transition .3s
    margin-right 10px

    .header__menu-link:hover &
      color $red
