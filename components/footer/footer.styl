.footer
  background $white
  border-radius 5px
  box-shadow 0px 1px 3px rgba($black, 0.1)
  padding 36px 0
  margin-top 20px
  display flex
  font-size 15px
  line-height (19 / 15)

  &__column
    min-width 310px
    padding 24px 30px

    &:not(:last-child)
      border-right 1px solid $whiteDarker

  &__title
    font-weight 700
    margin-bottom 5px

  &__link
    link-bordered-style()
    color $gray
    margin-left 10px

  &__text
    +.footer__text
      margin-top 54px

  &__contacts
    height 40px
    border-radius 40px
    border 2px solid $whiteDarkest
    display flex
    align-items center
    padding 2px 18px
    white-space nowrap
    min-width 260px
    color $grayLightest
    margin-top 56px

  &__contact-icon
    font-size 22px
    margin-left 4px

    &:first-child
      margin-left 18px

