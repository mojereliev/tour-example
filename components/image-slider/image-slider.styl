.image-slider
  position relative

  &__search-button
    position absolute
    top 10px
    right 10px
    width 56px
    height 56px
    border-radius 100%
    display flex
    align-items center
    justify-content center
    font-size 16px
    background rgba($black, .19)
    z-index 2
    color $white

  &__search-button-icon
    opacity .45

  &__image
    display block
    width 100%

  &__button-prev
  &__button-next
    position absolute
    top 50%
    width 60px
    height 60px
    margin-top -30px
    outline 0
    transition .3s
    z-index 2
    background $white
    color $grayLighter
    display flex
    align-items center
    justify-content center
    font-size 20px
    border-radius 100%

    &:not(.swiper-button-disabled):hover
      opacity .9

    &.swiper-button-disabled
      opacity .7
      cursor default

  &__button-prev
    left 10px

  &__button-next
    right 10px
