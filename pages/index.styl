.index-root
  &__body
    background $white
    border-radius 5px
    box-shadow 0px 1px 3px rgba($black, 0.1)
    padding 20px 30px 30px 20px
    display flex

  &__left
    position relative
    width 50%
    max-width 600px

  &__name
    font-size 20px
    line-height (24 / 20)
    font-weight 700
    text-align center

  &__slider
    margin-bottom 38px

  &__right
    padding-left 30px
    padding-top 28px
    flex-grow 1

  &__heading
    font-size 24px
    line-height (29 / 24)
    font-weight 600
    margin-bottom 2px

  &__subheading
    font-size 18px
    line-height (21 / 18)
    color $gray
    font-weight 700
    margin-bottom 13px

  &__rating
    margin-bottom 16px

  &__head
    display flex
    justify-content space-between
    font-size 12px
    line-height (14 / 12)
    margin-bottom 22px

  &__direction
    display flex
    align-items center
    color $gray

  &__direction-image
    width 23px
    display block
    margin-right 10px

  &__link
    link-bordered-style()
    color $gray

    &:after
      margin-top 0

  &__info-table
    border 1px solid $whiteDarker
    border-radius 3px
    display flex
    position relative

  &__info-button
    width 29px
    height 29px
    position absolute
    right 8px
    top 5px
    border 1px solid $whiteDarker
    font-size 16px
    display flex
    align-items center
    justify-content center
    border-radius 100%
    color $gray

  &__info-body
    flex-grow 1

  &__info-body
    display flex
    flex-direction column

  &__info-text
    padding 20px 16px

  &__info-item
    margin-bottom 14px

  &__info-target
    display inline-block
    vertical-align top
    color $gray
    margin-left 13px

  &__info-target-icon
    display inline-block
    vertical-align top
    font-size 20px
    margin-right 4px
    margin-top -2px

  &__info-calendar
    link-bordered-style()
    font-size 12px
    color $gray
    position relative
    margin-left 30px
    display inline-block
    vertical-align bottom
    margin-bottom 1px

    &:after
      margin-top 0

  &__info-calendar-icon
    font-size 16px
    position absolute
    left -18px
    top -4px

  &__features
    border-top 1px solid $whiteDarker
    display flex
    flex-wrap wrap
    margin-top auto

  &__feature
    border-right 1px solid $whiteDarker
    padding 18px 6px
    min-width 74px
    text-align center

  &__feature-icon
    font-size 30px
    display block
    margin 0 auto 7px

  &__feature-text
    font-size 10px
    line-height (12 / 10)

  &__prices
    width 204px
    border-left 1px solid $whiteDarker

  &__price
    display flex
    flex-wrap wrap
    color $gray
    align-items center
    padding 24px 22px 20px

    &:not(:last-child)
      border-bottom 1px solid $whiteDarker

    &_primary
      color $redLight

  &__price-value
    font-size 38px
    line-height (46 / 38)
    font-weight 500
    margin-right 6px
    margin-left -.08em

  &__price-currency
    font-size 13px
    line-height (18 / 13)
    font-weight 500
    margin-top 2px

  &__price-description
    width 100%
    font-size 13px
    line-height (16 / 13)
    font-weight 500
    display flex
    margin-top 5px
    align-items center

  &__price-icons
    margin-left 6px
    display flex
    margin-bottom 2px

  &__price-icon
    font-size 14px
    margin 0 1px

  &__price-icons-plus
    margin 0 4px

  &__controls
    margin 32px -5px 0
    display flex

  &__control-wrapper
    padding 0 5px
    width 50%

  &__control
    border-radius 40px
    font-size 15px
    line-height (18 / 15)
    font-weight 500
    border 2px solid $whiteDarkest
    color $grayLightest
    transition .3s
    height 40px
    width 100%

    &_primary
      background $blue
      color $white
      border-color $blue
